app.post('/users/:userId/ads/:adId', async (req, res) => {
  const { userId, adId } = req.params;

  try {
    const user = await User.findById(userId);
    if (!user) return res.status(404).send('User not found');

    if (!user.ads.find(ad => ad.adId.toString() === adId)) {
      user.ads.push({ adId, links: [] });
    }

    await user.save();
    res.status(200).send('Ad assigned to user successfully');
  } catch (error) {
    res.status(500).send('Server Error');
  }
});
